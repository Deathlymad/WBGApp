<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/n_icon"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_notification" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Neuer Vertretungsplan"
        android:id="@+id/n_title"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:textColor="@color/defaultBlack"
        android:layout_toEndOf="@+id/n_icon" />

    <TextView
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Der neue Vertretungsplan wurde hochgeladen! \n Schau ihn dir jetzt an."
        android:id="@+id/n_description"
        android:textColor="@color/DefaultDargrey"
        android:layout_below="@+id/n_title"
        android:layout_alignStart="@+id/n_title"
        android:layout_marginTop="10dp"
        android:singleLine="true"
        android:layout_alignEnd="@+id/n_time"
        android:layout_alignBottom="@+id/n_icon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="15:43"
        android:id="@+id/n_time"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/DefaultDargrey" />
</RelativeLayout>