<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="55dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="197dp"
            android:padding="3dp"
            android:id="@+id/settings_registration"
            android:layout_marginStart="0dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Login"
                android:id="@+id/textView2"
                android:layout_gravity="start|top"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp" />

            <TextView
                android:layout_width="222dp"
                android:layout_height="wrap_content"
                android:text="@string/settings_registration_desc"
                android:id="@+id/settings_registration_desc"
                android:layout_gravity="end|top"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="0dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName|text"
                android:ems="10"
                android:id="@+id/settings_registration_user"
                android:layout_gravity="center_horizontal|bottom"
                android:singleLine="true"
                android:linksClickable="false"
                android:clickable="false"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textColor="@color/defaultBlack"
                android:textIsSelectable="false"
                android:hint="E-Mail Adresse"/>

        </FrameLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/TextLoginButton"
            android:id="@+id/settings_registration_confirm"
            android:layout_marginStart="5dp"
            android:layout_below="@+id/settings_registration_password"
            android:layout_alignEnd="@+id/settings_registration_password" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/settings_registration_password"
            android:layout_gravity="start|bottom"
            android:singleLine="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_below="@+id/settings_registration"
            android:layout_alignParentEnd="true"
            android:textColor="@color/defaultBlack"
            android:hint="*********"/>

    </RelativeLayout>
</ScrollView>